<Window x:Class="Project_Final_Boss.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_Final_Boss"
        mc:Ignorable="d"
        Title="MainWindow" Height="470" Width="800" MaxWidth="800" MaxHeight="475">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Background/Login.jpg"/>
        </Grid.Background>
        <TextBox x:Name="UsernameTbx" HorizontalAlignment="Left" Margin="378,266,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="164" Height="23" TextChanged="Username" Text="" Background="#FF807373"/>
        <TextBox x:Name="PasswordTbx" HorizontalAlignment="Left" Margin="378,299,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="164" Height="23" TextChanged="Password" Text="" Background="#FF807373"/>
        <Button Name="Login_Button" Content="Login" HorizontalAlignment="Left" Margin="424,327,0,84"   Width="72" Height="23" Click="Login_Button_Click"/>
    </Grid>
</Window>
